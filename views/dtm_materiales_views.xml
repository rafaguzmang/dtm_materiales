<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dtm_materiales_tree" model="ir.ui.view">
        <field name="name">dtm_materiales_tree</field>
        <field name="model">dtm.materiales</field>
        <field name="arch" type="xml">
            <tree decoration-danger="cantidad==0">
                    <field name="codigo" />
                    <field name="material_id" />
                    <field name="calibre_id" />
                    <field name="calibre" invisible="1"/>
                    <field name="largo_id" />
                    <field name="largo" invisible="1"/>
                    <field name="ancho_id" />
                    <field name="ancho" invisible="1"/>
                    <field name="area" invisible="1"/>
                    <field name="cantidad" />
                    <field name="apartado"  />
                    <field name="disponible"  />
                    <field name="localizacion"  />
            </tree>
        </field>
    </record>

    <record id = "dtm_materiales_search" model="ir.ui.view">
       <field name="name">dtm.materiales.search</field>
       <field name="model">dtm.materiales</field>
       <field name ="arch" type="xml">
           <search>
                <field name="calibre"/>
                <field name="apartado"  />

                <filter string="stock" name="stock" domain="[('cantidad','!=','0')]"/>
                <filter string="apartado" name="apartado" domain="[('apartado','!=','0')]"/>
                <filter string="Completa" name="lamina_completa" domain="[('largo','=',10),'|',('ancho','=',4),('ancho','=',3),'|',
                                                                              ('largo','=',8),'|',('ancho','=',4),('ancho','=',3),'|',
                                                                               ('largo','=',6),'|',('ancho','=',4),('ancho','=',3)]"/>
                <separator/>
                <filter string="@ 10" name="diseno_cal_11" domain="[('calibre','like','10')]"/>
                <filter string="@ 11" name="diseno_cal_11" domain="[('calibre','like','11')]"/>
                <filter string="@ 12" name="diseno_cal_11" domain="[('calibre','like','12')]"/>
                <filter string="@ 14" name="diseno_cal_14" domain="[('calibre','like','14')]"/>
                <filter string="@ 16" name="diseno_cal_16" domain="[('calibre','like','16')]"/>
                <filter string="@ 18" name="diseno_cal_18" domain="[('calibre','like','18')]"/>
                <filter string="@ 20" name="diseno_cal_18" domain="[('calibre','like','20')]"/>
                <filter string="@ 22" name="diseno_cal_22" domain="[('calibre','like','22')]"/>
                <separator/>
                <filter string="Acero al carbón" name="diseno_carbon" domain="[('material_id','ilike','carbón')]"/>
                <filter string="Inoxidable" name="diseno_inox" domain="[('material_id','ilike','inoxidable')]"/>
                <filter string="Galvanizado" name="diseno_cal_11" domain="[('material_id','ilike','galvanizado')]"/>
                <filter string="Aluminio" name="diseno_cal_14" domain="[('material_id','ilike','aluminio')]"/>
                <separator/>
                <filter string="@ 1/4" name="diseno_cal_1_4" domain="[('calibre','like','.25')]"/>
                <filter string="@ 1/8" name="diseno_cal_1_8" domain="[('calibre','like','.125')]"/>
                <filter string="@ 3/8" name="diseno_cal_3_8" domain="[('calibre','like','.375')]"/>
                <filter string="@ 1/2" name="diseno_cal_1_2" domain="[('calibre','like','.5')]"/>
                <filter string="@ 5/8" name="diseno_cal_5_8" domain="[('calibre','like','.625')]"/>
                <filter string="@ 3/4" name="diseno_cal_3_4" domain="[('calibre','like','.75')]"/>
                <filter string="@ 3/16" name="diseno_cal_3_16" domain="[('calibre','like','.1875')]"/>
           </search>
       </field>
   </record>

    <record id="dtm_materiales_view_form" model="ir.ui.view">
        <field name="name">dtm_materiales_view_form</field>
        <field name="model">dtm.materiales</field>
        <field name="arch" type="xml">
            <form>
                <style type="text/css">
                    h1 {
                        color: #9900cc;
                    }
                    .titulo-id {
                        display: flex;
                        justify-content: space-around;
                        margin-bottom: 30px
                    }
                    .custom-sheet{
                         max-width: 50%;
                    }
                    .informacion{
                        color:#ff6600;
                        display: flex;
                        justify-content: space-between;
                    }
                    .cantidades{
                        color:##9900cc;
                        display: flex;
                        justify-content: space-between;
                    }
                    .cantidades, .entradas {
                        display: flex;
                    }
                    .custom-sheet{
                        display: flex;
                        flex-direction: column;
                    }
                    .contenedor{
                        display: flex;
                        justify-content: center;
                    }

                </style>
                <header>
                    <button name="accion_salidas" type="object" string="Salidas" class="btn btn-primary"/>
                    <button name="accion_proyecto" type="object" string="Salida de Proyecto" class="btn btn-primary"/>
                </header>
                <sheet class="contenedor">
                    <div class="custom-sheet">
                        <div class="titulo-id">
                            <h1 class="titulo">LÁMINA</h1>
                            <h1><field name="codigo" /> </h1>
                        </div>
                        <div class="informacion">
                            <h3>Apartado:
                                <field name="apartado"  />
                            </h3>
                            <h3>Disponible:
                                <field name="disponible" />
                            </h3>
                        </div>

                        <div class="">
                              <div>
                                    <h2>Material</h2>
                                    <field name="material_id"  />
                              </div>
                              <div class="">
                                <h2>Calibre</h2>
                                   <field name="calibre_id" />
                              </div>
                              <div class="">
                                <h2>Largo</h2>
                                    <field name="largo_id" />
                              </div>
                              <div class="">
                                <h2>Ancho</h2>
                                <field name="ancho_id" />
                              </div>
                              <div>
                                <h2>Localización</h2>
                                <field name="localizacion" />
                              </div>
                              <div>
                                <h2>Descripción</h2>
                                <field name="descripcion" />
                              </div>
                        </div>
                        <div class="cantidades ">
                            <h1>
                                <p>Stock:</p>
                                <field name="cantidad" />
                            </h1>
                            <h1>
                                <p>Entradas:</p>
                                <field name="entradas" />
                            </h1>
                        </div>
                        <button name="accion_guardar" type="object" string="Guardar" class="btn btn-primary"/>


                        <group>
                            <field name="calibre" options = "{'no_open': True}" invisible="1"/>
                            <field name="largo" options = "{'no_open': True}" invisible="1"/>
                            <field name="ancho" options = "{'no_open': True}" invisible="1"/>
                            <field name="area" options = "{'no_open': True}" invisible="1"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


    <record id="dtm_materiales_accion" model="ir.actions.act_window">
        <field name="name">Lámina</field>
        <field name="res_model">dtm.materiales</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    <menuitem id="dtm_materiales" parent="" action="dtm_materiales_accion"/>-->
    
   
</odoo>
