<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dtm_materiales_rodamientos_tree" model="ir.ui.view">
        <field name="name">dtm_materiales_rodamientos_tree</field>
        <field name="model">dtm.materiales.rodamientos</field>
        <field name="arch" type="xml">
            <tree decoration-danger="cantidad==0">
                    <field name="id" invisible="1"/>
                    <field name="material_id" />
                    <field name="descripcion" invisible="0"/>
                    <field name="cantidad" />
                    <field name="apartado"  />
                    <field name="disponible"  />
            </tree>
        </field>
    </record>

    <record id="dtm_materiales_rodamientos_view_form" model="ir.ui.view">
        <field name="name">dtm_materiales_rodamientos_view_form</field>
        <field name="model">dtm.materiales.rodamientos</field>
        <field name="arch" type="xml">
            <form string="">
                <style type="text/css">
                    .o_form_sheet{
                        padding: 0;
                        display: flex;
                        justify-content: center;
                        margin:0;
                    }
                    h1 {
                        color: #71649c;
                    }

                    .titulo-id {
                        display: flex;
                        justify-content: center;
                        border-top: 2px solid #71649c;
                        margin-top: 5px;
                        padding-top: 10px;

                    }

                    .informacion{
                        color:#71649c;
                        display: flex;
                        justify-content: space-between;
                        padding-bottom: 10px;

                    }
                    .pie-pag{
                        display: flex;
                        flex-direction: column;
                    }
                    .cantidades{
                        color:#71649c;
                        display: flex;
                        justify-content: space-between;
                    }

                    .contenedor{
                        display: flex;
                        width: 100%;
                        background: yellow;
                    }
                    .custom-sheet{
                        display: flex;
                        flex-direction: column;
                        background: rgba(230, 255, 255,.5);
                        padding: 5px;
                        border: 1px solid rgba(0, 0, 0,0.2);
                        border-radius: 5px;
                        margin-top: -23px;
                        margin-bottom: -22px;
                        width:50%
                    }
                   .botones{
                        display:flex;
                        justify-content: space-between;
                    }
                    .guardar{
                        height: 50px;
                    }
                    .description{
                        margin-top: 5px;
                        border: 1px solid rgba(0, 0, 0, 0.1);
                        border-radius: 5px;
                        padding: 3px;
                        text-align: center;
                        margin-bottom:15px;
                    }
                    .contenedor-datos{
                        border: 1px solid rgba(0, 0, 0, 0.1);
                        border-radius: 5px;
                        padding-left: 5px;
                    }
                    .titulo{
                        margin-left: 10px;

                    }
                    .codigo{
                        margin-right: 10px;
                    }
                    .stock{
                        display:flex
                    }
                    .campo{
                        text-align:center
                    }


                </style>
                <sheet class="contenedor">
                    <div class="custom-sheet">
                        <div class="botones">
                            <button name="accion_salidas" type="object" string="Salidas" class="btn btn-primary"/>
                            <button name="accion_proyecto" type="object" string="Salida de Proyecto" class="btn btn-primary"/>
                        </div>
                        <div class="titulo-id">
                            <h1 class="codigo">
                                <field name="codigo" />
                            </h1>
                            <h1 class="titulo">RODAMIENTOS</h1>
                        </div>
                        <div class="informacion">
                            <h3>Apartado:
                                <field name="apartado"  />
                            </h3>
                            <h3>Disponible:
                                <field name="disponible" />
                            </h3>
                        </div>
                        <div class="contenedor-datos">
                              <div class="datos">
                                <h2>Material</h2>
                                <field name="material_id"  />
                              </div>
                              <div class="datos">
                                <h2>Localización</h2>
                                <field name="localizacion" />
                              </div>
                        </div>
                        <div class="description">
                            <h2>Descripción</h2>
                            <field name="descripcion" />
                        </div>
                        <div class="pie-pag ">
                            <div class="cantidades">
                                <h1 class="stock" >
                                    <p>Stock:</p>
                                    <field name="cantidad"  class="campo"/>
                                </h1>
                                <h1 class="stock">
                                    <p>Entradas:</p>
                                    <field name="entradas" class="campo"/>
                                </h1>
                            </div>
                            <button name="accion_guardar" type="object" string="Guardar" class="btn btn-primary guardar"/>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


    <record id="dtm_materiales_rodamientos_accion" model="ir.actions.act_window">
        <field name="name">Rodamientos</field>
        <field name="res_model">dtm.materiales.rodamientos</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    <menuitem id="dtm_materiales_rodamientos"  action="dtm_materiales_rodamientos_accion"/>-->
    
   
</odoo>
