<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dtm_materiales_solera_tree" model="ir.ui.view">
        <field name="name">dtm_materiales_solera_tree</field>
        <field name="model">dtm.materiales.solera</field>
        <field name="arch" type="xml">
            <tree decoration-danger="cantidad==0">
                    <field name="id" invisible="1"/>
                    <field name="material_id" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="calibre_id" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="calibre" invisible="1"/>
                    <field name="largo_id" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="largo" invisible="1"/>
                    <field name="ancho_id" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="ancho" invisible="1"/>
                    <field name="area" invisible="1"/>
                    <field name="cantidad" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="apartado"  attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="disponible"  attrs="{'invisible': [('cantidad','=',0)]}"/>
            </tree>
        </field>
    </record>

     <record id = "dtm_materiales_search" model="ir.ui.view">
               <field name="name">dtm.materiales.solera.search</field>
               <field name="model">dtm.materiales.solera</field>
               <field name ="arch" type="xml">
                   <search>
                        <field name="calibre"></field>
                        <field name="apartado"  />

                        <filter string="stock" name="stock" domain="[('cantidad','!=','0')]"/>
                        <filter string="apartado" name="apartado" domain="[('apartado','!=','0')]"/>
                        <separator/>
                        <filter string="@ 10" name="diseno_cal_11" domain="[('calibre','like','10')]"/>
                        <filter string="@ 11" name="diseno_cal_11" domain="[('calibre','like','11')]"/>
                        <filter string="@ 12" name="diseno_cal_11" domain="[('calibre','like','12')]"/>
                        <filter string="@ 14" name="diseno_cal_14" domain="[('calibre','like','14')]"/>
                        <filter string="@ 16" name="diseno_cal_16" domain="[('calibre','like','16')]"/>
                        <filter string="@ 18" name="diseno_cal_18" domain="[('calibre','like','18')]"/>
                        <filter string="@ 20" name="diseno_cal_18" domain="[('calibre','like','20')]"/>
                        <filter string="@ 22" name="diseno_cal_22" domain="[('calibre','like','22')]"/>
                        <separator/>
                        <filter string="Ácero al carbón" name="diseno_carbon" domain="[('material_id','ilike','carbón')]"/>
                        <filter string="Inoxidable" name="diseno_inox" domain="[('material_id','ilike','inoxidable')]"/>
                        <filter string="Galvanizado" name="diseno_cal_11" domain="[('material_id','ilike','galvanizado')]"/>
                        <filter string="Aluminio" name="diseno_cal_14" domain="[('material_id','ilike','aluminio')]"/>
                        <separator/>
                        <filter string="@ 1/4" name="diseno_cal_1_4" domain="[('calibre','like','.25')]"/>
                        <filter string="@ 1/8" name="diseno_cal_1_8" domain="[('calibre','like','.125')]"/>
                        <filter string="@ 3/8" name="diseno_cal_3_8" domain="[('calibre','like','.375')]"/>
                        <filter string="@ 1/2" name="diseno_cal_1_2" domain="[('calibre','like','.5')]"/>
                        <filter string="@ 5/8" name="diseno_cal_5_8" domain="[('calibre','like','.625')]"/>
                        <filter string="@ 3/4" name="diseno_cal_3_4" domain="[('calibre','like','.75')]"/>
                        <filter string="@ 3/16" name="diseno_cal_3_16" domain="[('calibre','like','.1875')]"/>

                   </search>
               </field>
           </record>

    <record id="dtm_materiales_solera_view_form" model="ir.ui.view">
        <field name="name">dtm_materiales_solera_view_form</field>
        <field name="model">dtm.materiales.solera</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                        <button name="accion_salidas" type="object" string="Salidas" class="btn btn-primary"/>
                        <button name="accion_proyecto" type="object" string="Salida de Proyecto" class="btn btn-primary"/>
                </header>
                <sheet>
                        <div class="row ">
                            <div class="col-12 d-flex justify-content-center">
                                <h1>ALMACÉN</h1>
                            </div>
                        </div>
                        <br></br>
                        <div class="row d-flex justify-content-between">
                              <div class="col-3 d-flex flex-column justify-content-start" >
                                    <h2>Material</h2>
                                    <field name="material_id" options = "{'no_open': True}" />
                              </div>
                              <div class="col-3  d-flex flex-column justify-content-start">
                                <h2>Calibre</h2>
                                   <field name="calibre_id" options = "{'no_open': True}"/>
                              </div>
                              <div class="col-3  d-flex flex-column justify-content-start">
                                <h2>Largo</h2>
                                    <field name="largo_id" options = "{'no_open': True}"/>
                              </div>
                              <div class="col-3  d-flex flex-column justify-content-start">
                                <h2>Ancho</h2>
                                   <field name="ancho_id" options = "{'no_open': True}"/>
                              </div>
                        </div>
                        <div class="row">
                            <br></br>
                        </div>
                        <div class="row ">
                            <div class="col-12 d-flex justify-content-start">
                                <div class="col-2 d-flex ">
                                    <h3 class="text-warning" >Apartado:

                                        <field name="apartado"  />
                                    </h3>
                                </div>
                                 <div class="col-2 d-flex ">
                                     <h3 class="text-primary">Disponible:
                                       <field name="disponible" />
                                     </h3>
                                </div>
                            </div>
                        </div>
                        <br></br><br></br>
                         <div class="row ">
                            <div class="col-12 d-flex justify-content-between">
                                <h1 class="text-success">Stock:
                                    <field name="cantidad" />
                                </h1>
                                <h1 >
                                    Entradas:
                                    <field name="entradas" />
                                </h1>
                            </div>
                        </div>
                        <notebook>
                             <page string="localizacion">
                                <field name="localizacion" />
                            </page>
                            <page string="Notas">
                                <field name="descripcion" />
                            </page>
                        </notebook>
                        <group>
                            <field name="calibre" options = "{'no_open': True}" invisible="1"/>
                            <field name="largo" options = "{'no_open': True}" invisible="1"/>
                            <field name="ancho" options = "{'no_open': True}" invisible="1"/>
                            <field name="area" options = "{'no_open': True}" invisible="1"/>



                        </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="dtm_materiales_solera_accion" model="ir.actions.act_window">
        <field name="name">Solera</field>
        <field name="res_model">dtm.materiales.solera</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    <menuitem id="dtm_materiales_solera" parent="" action="dtm_materiales_solera_accion"/>-->
    
   
</odoo>
