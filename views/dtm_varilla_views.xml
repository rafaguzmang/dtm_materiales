<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dtm_varilla_tree" model="ir.ui.view">
        <field name="name">dtm_materiales_varilla_tree</field>
        <field name="model">dtm.materiales.varilla</field>
        <field name="arch" type="xml">
            <tree>
                    <field name="id" invisible="1"/>
                    <field name="material_id" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="diametro_id" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="diametro" invisible="1"/>
                    <field name="largo_id" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="largo" invisible="1"/>
                    <field name="cantidad" attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="apartado"  attrs="{'invisible': [('cantidad','=',0)]}"/>
                    <field name="disponible"  attrs="{'invisible': [('cantidad','=',0)]}"/>
            </tree>
        </field>
    </record>

    <record id="dtm_varilla_view_form" model="ir.ui.view">
        <field name="name">dtm_materiales_varilla_view_form</field>
        <field name="model">dtm.materiales.varilla</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                        <button name="accion_salidas" type="object" string="Salidas" class="btn btn-primary"/>
                        <button name="accion_proyecto" type="object" string="Salida de Proyecto" class="btn btn-primary"/>
                </header>
                <sheet>
                        <div class="row ">
                            <div class="col-12 d-flex justify-content-center">
                                <h1>Varilla</h1>
                            </div>
                        </div>
                        <br></br>
                        <div class="row d-flex justify-content-between">
                              <div class="col-3 d-flex flex-column justify-content-start" >
                                    <h2>Material</h2>
                                    <field name="material_id" options = "{'no_open': True}" />
                              </div>
                              <div class="col-3  d-flex flex-column justify-content-start">
                                <h2>Di√°metro</h2>
                                   <field name="diametro_id" options = "{'no_open': True}"/>
                              </div>
                              <div class="col-3  d-flex flex-column justify-content-start">
                                <h2>Largo</h2>
                                    <field name="largo_id" options = "{'no_open': True}"/>
                              </div>
                        </div>
                        <div class="row">
                            <br></br>
                        </div>
                        <div class="row ">
                            <div class="col-12 d-flex justify-content-start">
                                <div class="col-2 d-flex ">
                                    <h3 class="text-warning" >Apartado:
                                        <field name="apartado"  />
                                    </h3>
                                </div>
                                 <div class="col-2 d-flex ">
                                     <h3 class="text-primary">Disponible:
                                       <field name="disponible" />
                                     </h3>
                                </div>
                            </div>
                        </div>
                        <br></br><br></br>
                         <div class="row ">
                            <div class="col-12 d-flex justify-content-between">
                                <h1 class="text-success">Stock:
                                    <field name="cantidad" />
                                </h1>
                                <h1 >
                                    Entradas:
                                    <field name="entradas" options='{"type": "number"}'/>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <field name="largo" options = "{'no_open': True}" invisible="1"/>
                            <field name="diametro" options = "{'no_open': True}" invisible="1"/>
<!--                            <field name="area" options = "{'no_open': True}" invisible="1"/>-->
                        </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dtm_materiales_varilla_accion" model="ir.actions.act_window">
        <field name="name">Varilla</field>
        <field name="res_model">dtm.materiales.varilla</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    <menuitem id="dtm_materiales_varilla" parent="" action="dtm_materiales.dtm_materiales_varilla_accion"/>    -->
   
</odoo>
